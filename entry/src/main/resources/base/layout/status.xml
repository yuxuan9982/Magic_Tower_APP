<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:alignment="horizontal_center">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="vertical_center"
        ohos:orientation="vertical"
        >
        <Image
            ohos:height="40vp"
            ohos:width="40vp"
            ohos:background_element="$media:hero"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="英雄"
            ohos:text_size="20vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="生命值"
            ohos:text_size="20vp"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="1000"
            ohos:id="$+id:status_health"
            ohos:text_size="20vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="攻击力"
            ohos:text_size="20vp"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="30"
            ohos:id="$+id:status_attack"
            ohos:text_size="20vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="防御"
            ohos:text_size="20vp"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="10"
            ohos:id="$+id:status_defence"
            ohos:text_size="20vp"
            />
    </DirectionalLayout>

    <Image
        ohos:height="60vp"
        ohos:width="60vp"
        ohos:image_src="$media:vs"
        ohos:layout_alignment="vertical_center"
        ohos:left_margin="10vp"
        ohos:right_margin="10vp"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="vertical_center"
        ohos:orientation="vertical"
        >
        <Image
            ohos:height="40vp"
            ohos:width="40vp"
            ohos:background_element="$media:boss"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="怪物"
            ohos:text_size="20vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="生命值"
            ohos:text_size="20vp"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="1000"
            ohos:id="$+id:status_health_monster"
            ohos:text_size="20vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="攻击力"
            ohos:text_size="20vp"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="30"
            ohos:id="$+id:status_attack_monster"
            ohos:text_size="20vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="防御"
            ohos:text_size="20vp"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="10"
            ohos:id="$+id:status_defence_monster"
            ohos:text_size="20vp"
            />
    </DirectionalLayout>

</DirectionalLayout>